<form class="my-2 my-lg-0 form-inline" asp-controller="Account" asp-action="Login">
    <!--form token auto-->
    <input class="form-control mr-sm-2" type="text" placeholder="Username">
    <input class="form-control mr-sm-2" type="password" placeholder="Password">
    <div class="dropdown sign">
        <div class="dropbtn btn btn-success">Sign in</div>
        <div class="dropdown-content">
            <input type="submit" class="btn btn-success" asp-controller="Account" asp-action="Login" asp-asAdvertiser=true value="as Advertiser" />
            <input type="submit" class="btn btn-success" asp-controller="Account" asp-action="Login" asp-asAdvertiser=false value="as Customer" />
        </div>
    </div>
    <div class="dropdown reg">
        <div class="dropbtn btn btn-warning">Register</div>
        <div class="dropdown-content">
            <a class="btn btn-warning" asp-controller="Account" asp-action="Register" asp-asAdvertiser=true>as Advertiser</a>
            <a class="btn btn-warning" asp-controller="Account" asp-action="Register" asp-asAdvertiser=false>as Customer</a>
        </div>
    </div>
</form>