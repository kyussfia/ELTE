@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home page";

}

@if (ViewBag.LoggedMessage != null)
{
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong>&nbsp;@ViewBag.LoggedMessage
    </div>
}
@if (ViewBag.Animals == null || ViewBag.Animals.Count == 0)
{
    <div class="well">
        <h2>There are no registered animal, yet.</h2>
    </div>
}
else
{
    <div class="well">
        <h2>Latest:</h2>
    </div>
    <div class="row">
        @for (int i = 0; i < ViewBag.Animals.Count; i++)
        {
            if (i > 0 && i % 3 == 0)
            {
                @:</div><div class="row">
            }
            <div class="col-sm-4">
                <div class="well">
                    <a class="itemName" asp-controller="Animals" asp-action="Get" asp-route-errorId="@ViewBag.Animals[i].Id">@ViewBag.Animals[i].Name</a><br />
                    <p>@ViewBag.Animals[i].CreatedAt</p>
                </div>
            </div>
        }
    </div>
}

